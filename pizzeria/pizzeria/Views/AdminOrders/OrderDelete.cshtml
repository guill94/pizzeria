@model Order

@{
    ViewData["Title"] = "Supprimer une commande";
}


<div class="row text">
            <div class="col-md-8 offset-2">
                <p>
                    <h1>Supprimer une commande</h1>
                </p>
                <div class="row">
                    <div class="col-md-8 offset-2">
                            
                        <div class="form-group">
                                    <label class="control-label">Numéro de commande :</label>
                                    <input asp-for="@Model.IdOrder" class="form-control" disabled/>
                        </div>

                         
                            <div class="form-group">
                                <form asp-action="OrderDeleteConfirmed">
                        <input type="hidden" asp-for="@Model.IdOrder" />
                                    <input type="submit" value="Confirmer" class="btn btn-outline-success float-right" />
                                    <a class="btn btn-outline-secondary" asp-action="Orders">Annuler</a>
                                 </form>
                            </div>
                        
                        

                    </div>
                </div>
            </div>
        </div>
