@model pizzeria.Models.Ingredient

@{
    ViewData["Title"] = "Supprimer ingrédient";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Supprimer un Ingrédient</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">


                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="IngredientName" class="control-label"></label>
                    <input asp-for="IngredientName" class="form-control" disabled />
                    <span asp-validation-for="IngredientName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdIngredient" />
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Confirmer" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Annuler</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
